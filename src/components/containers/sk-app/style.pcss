@import './../../../global-style/basics/media-queries.pcss';
@import './../../../global-style/basics/links.pcss';
@import './../../../global-style/basics/typography.pcss';
@import './../../../global-style/keyframes/fadeIn.pcss';

:host {
  display: block;
  overflow: auto;
  height: 100vh;
}


.Welcome {
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
  margin-top: 10vh;
  padding: 0 40px;
  user-select: none;
  cursor: default;
  position: relative;
  padding-top: 220px;
  overflow-x: hidden;
}


.Title {
  font-size: 3em;
  text-align: center;
  font-weight: 800;
  margin-top: 0;
  margin-bottom: 40px;
  opacity: 0;
  animation-name: FadeIn;
  animation-duration: 400ms;
  animation-delay: 400ms;
  animation-fill-mode: forwards;
  animation-timing-function: ease-out;
}


.Welcome p {
  text-align: center;
  margin-top: 0;
  max-width: 90%;
  letter-spacing: 2px;
  opacity: 0.8;
  opacity: 0;
  animation-name: FadeIn;
  animation-duration: 400ms;
  animation-delay: 500ms;
  animation-fill-mode: forwards;
  animation-timing-function: ease-out;

  @media (--medium) {
    max-width: 60%;
  }
}


.Meta {
  font-size: 0.5em;
  opacity: 0.5;
  user-select: none;
  cursor: default;
  position: fixed;
  bottom: 16px;
  right: 16px;
}


.SKLogo {
  position: absolute;
  top: -200px;
  width: 600px;
  opacity: 0;
  animation-name: FadeIn;
  animation-duration: 600ms;
  animation-fill-mode: forwards;
  animation-timing-function: ease-out;

  @media (--medium) {
    top: -180px;
  }
}


sk-button {
  margin-top: 20px;
  opacity: 0;
  animation-name: FadeIn;
  animation-duration: 400ms;
  animation-delay: 700ms;
  animation-fill-mode: forwards;
  animation-timing-function: ease-out;
}

.UpdateReadyAlert {
  position: absolute;
  left: 30px;
  bottom: 30px;
}
